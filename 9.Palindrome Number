class Solution {
    public boolean isPalindrome(int x) {
         int result=0;
        int tail=0;
        int temp=x;
        while (x> 0)
        {
            tail = x % 10;
            result = result * 10 + tail;
            x = x / 10;
        }

        if(result==temp){
            return true;
        } else{
            return false;
        }
        
    }
}
